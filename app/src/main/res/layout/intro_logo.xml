<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="FINDING"
        android:paddingTop="40dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/logoHeader"
        app:layout_constraintBottom_toTopOf="@id/logoBottom"
        android:padding="20dp"
        android:id="@+id/logoCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp">
        <ImageView
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:src="@drawable/al_facone_logo" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/logoBottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="AL-FACONE"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="40sp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>